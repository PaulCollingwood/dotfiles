#!/bin/zsh

[ ! -e ~/.zshrc ] && echo ". ${0:h:A}/zsh/zshrc" >> ~/.zshrc || echo "~/.zshrc already exists, skipping"

for source target in ${0:h:A}/tmux.conf ~/.tmux.conf \
                     ${0:h:A}/vim       ~/.vim       \
                     ${0:h:A}/vim/vimrc ~/.vimrc
do
    if [ -e ${target} ]
    then
        echo "${target} already exists, skipping"
    else
        ln -s ${source} ${target}
    fi
done

return 0

# vim: set ai et sw=4 syntax=zsh :
