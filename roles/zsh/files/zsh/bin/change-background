#!/bin/bash

# Takes an image path as a single argument - this assumes that any spaces
# are spaces in the filename

IMAGE_FILE="$*"
if [ ${IMAGE_FILE:0:1} != "/" ]
then
    IMAGE_FILE="$(pwd)/${IMAGE_FILE}"
fi

gconftool-2 --type string --set /desktop/gnome/background/picture_filename "${IMAGE_FILE}"

# vim: set ai et sw=4 syntax=sh :
