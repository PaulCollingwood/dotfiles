##################
# Custom Aliases #
##################

alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias lla='ls -al'

# Quick way to notify me of events with a memorable name
alias say='notify-send'

# ack should actually be called ack otherwise it isn't quicker to type than
# grep!
alias ack='ack-grep'

# Just a quick way to do the 'gitk' command that I ALWAYS use
alias mgk='gitk --all &!'

# Print the permissions on this folder and all parents. Occasionally useful.
alias permission-tree='( loc=$(pwd); function show () { ls -ld $loc }; while [ "${loc}" != "/" ]; do show; loc=${loc:h}; done; show; ) | column -t'

# This takes textual input from stdin and strips any color codes from it
alias strip-color='sed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g"'

# Download the music from multiple youtube videos and save each as the title of the video
alias youtube='each "youtube-dl --extract-audio --output \\"%(title)s.%(ext)s\\" \$1"'

